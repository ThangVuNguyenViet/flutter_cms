
{
  "fields": [
    {
      "name": "title",
      "title": "Title",
      "type": "string",
      "description": "The title of the document."
    },
    {
      "name": "slug",
      "title": "Slug",
      "type": "slug",
      "options": {
        "source": "title",
        "maxLength": 96
      }
    },
    {
      "name": "author",
      "title": "Author",
      "type": "reference",
      "to": {
        "type": "author"
      }
    },
    {
      "name": "mainImage",
      "title": "Main image",
      "type": "image",
      "options": {
        "hotspot": true
      }
    },
    {
      "name": "categories",
      "title": "Categories",
      "type": "array",
      "of": [
        {
          "type": "reference",
          "to": {
            "type": "category"
          }
        }
      ]
    },
    {
      "name": "publishedAt",
      "title": "Published at",
      "type": "datetime"
    },
    {
      "name": "releaseDate",
      "title": "Release date",
      "type": "date"
    },
    {
      "name": "body",
      "title": "Body",
      "type": "array",
      "of": [
        {
          "type": "block"
        },
        {
          "type": "image"
        }
      ]
    },
    {
      "name": "isPublished",
      "title": "Is published",
      "type": "boolean"
    },
    {
      "name": "summary",
      "title": "Summary",
      "type": "text",
      "rows": 5
    },
    {
      "name": "price",
      "title": "Price",
      "type": "number",
      "validation": "Rule => Rule.required().positive().precision(2)"
    },
    {
      "name": "location",
      "title": "Location",
      "type": "geopoint"
    },
    {
      "name": "document",
      "title": "Document",
      "type": "file"
    },
    {
      "name": "socialLinks",
      "title": "Social Media Links",
      "type": "object",
      "fields": [
        {
          "name": "twitter",
          "title": "Twitter",
          "type": "url"
        },
        {
          "name": "linkedin",
          "title": "LinkedIn",
          "type": "url"
        }
      ]
    },
    {
      "name": "relatedContent",
      "title": "Related Content",
      "type": "crossDatasetReference",
      "dataset": "another-dataset",
      "to": [
        {
          "type": "post",
          "preview": {
            "select": {
              "title": "title",
              "subtitle": "author.name",
              "media": "mainImage"
            }
          }
        }
      ]
    }
  ]
}
